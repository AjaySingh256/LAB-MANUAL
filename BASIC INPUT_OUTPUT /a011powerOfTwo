#include<stdio.h>
int main()
{
    int num;
    printf(" enter an integer:");
    scanf("%d",&num);

    if(num && ((num & (num-1)) == 0))
    {
        printf("%d is power of 2", num);
    }
    else
    {
        printf("%d is not a power of 2",num);
    }
    return 0;
}
// ***OUTPUT***
// enter an integer:32
// 32 is power of 2
